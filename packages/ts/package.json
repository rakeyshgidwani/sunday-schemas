{
  "name": "@sunday/schemas",
  "version": "1.0.3",
  "type": "module",
  "description": "TypeScript schemas and types for Sunday platform events and APIs",
  "keywords": ["sunday", "schemas", "typescript", "events", "api"],
  "homepage": "https://github.com/sunday-xyz/schemas",
  "repository": {
    "type": "git",
    "url": "https://github.com/sunday-xyz/schemas.git",
    "directory": "packages/ts"
  },
  "license": "MIT",
  "files": [
    "src/**/*.d.ts",
    "openapi/ui.v1.yaml",
    "openapi/ui.v1.bundled.json",
    "docs/**"
  ],
  "exports": {
    ".": "./src/index.d.ts",
    "./ui": "./src/ui/index.d.ts",
    "./events": "./src/events/index.d.ts",
    "./openapi.yaml": "./openapi/ui.v1.yaml",
    "./openapi.json": "./openapi/ui.v1.bundled.json"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "gen:events": "npx json-schema-to-typescript \"../../schemas/json/**/*.json\" --cwd ../.. --outDir packages/ts/src/events",
    "gen:openapi": "npx openapi-typescript ../../openapi/ui.v1.yaml -o src/ui/index.d.ts",
    "build": "npm run gen:events && npm run gen:openapi && node ../../scripts/rollup-ts-index.mjs",
    "verify:versions": "node ../../scripts/check-version-matches-tag.mjs",
    "prepublishOnly": "npm run build && npm run verify:versions"
  },
  "devDependencies": {
    "json-schema-to-typescript": "^15.0.0",
    "openapi-typescript": "^7.0.0"
  }
}