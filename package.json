{
  "name": "sunday-schemas",
  "version": "1.0.0",
  "description": "Schema registry for Sunday platform event definitions and API contracts",
  "main": "codegen/ts/index.js",
  "type": "commonjs",
  "workspaces": [
    "packages/ts"
  ],
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "validate-schemas": "node scripts/validate-schemas.js",
    "validate-examples": "node scripts/validate-examples.js",
    "lint-openapi": "spectral lint openapi/ui.v1.yaml",
    "lint-json": "jsonlint schemas/**/*.json",
    "validate": "npm run validate-schemas && npm run validate-examples",
    "lint": "npm run lint-openapi && npm run lint-json",
    "test": "npm run validate && npm run lint",
    "generate-ts": "npx json-schema-to-typescript -i schemas/json -o codegen/ts",
    "generate-openapi-ts": "npx openapi-typescript openapi/ui.v1.yaml -o codegen/ts/api.ts",
    "generate-go": "node scripts/generate-go.js",
    "generate-openapi-go": "mkdir -p codegen/go/api && export PATH=$PATH:$(go env GOPATH)/bin && oapi-codegen -generate types,client -package api openapi/ui.v1.yaml > codegen/go/api/client.go",
    "generate": "npm run generate-ts && npm run generate-openapi-ts && npm run generate-go && npm run generate-openapi-go",
    "check-compatibility": "node scripts/check-compatibility.js",
    "check-changelog": "node scripts/check-changelog.js",
    "check-deprecations": "node scripts/check-deprecations.js",
    "check-version-overlap": "node scripts/check-version-overlap.js",
    "deprecation-report": "node scripts/check-deprecations.js --report",
    "analyze-coverage": "node scripts/analyze-coverage.js",
    "ci-validate": "npm run validate && npm run lint && npm run check-compatibility",
    "build": "npm run validate && npm run generate",
    "dev": "npm run validate",
    "deploy": "./scripts/deploy.sh",
    "deploy:dry-run": "./scripts/deploy.sh --dry-run",
    "deploy:skip-tests": "./scripts/deploy.sh --skip-tests",
    "release": "./scripts/release.sh",
    "release:dry-run": "./scripts/release.sh --dry-run",
    "release:auto": "./scripts/release.sh --auto-deploy",
    "deploy:services": "./scripts/deploy-consuming-services.sh",
    "deploy:services:dry-run": "./scripts/deploy-consuming-services.sh --dry-run",
    "backfill:go-tags": "./scripts/backfill-go-tags.sh",
    "backfill:go-tags:dry-run": "./scripts/backfill-go-tags.sh --dry-run",
    "validate-deployment": "./scripts/validate-deployment.sh",
    "validate-deployment:quick": "./scripts/validate-deployment.sh --quick",
    "build:ts": "npm run build --workspace=@rakeyshgidwani/sunday-schemas",
    "verify:versions": "node scripts/check-version-matches-tag.mjs",
    "bundle:openapi": "npx @redocly/cli bundle openapi/ui.v1.yaml -o openapi/ui.v1.bundled.json",
    "build:agents": "node scripts/build-agents-pack.mjs",
    "release:prepare": "npm run bundle:openapi && npm run build:ts && npm run verify:versions"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rakeyshgidwani/sunday-schemas.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rakeyshgidwani/sunday-schemas/issues"
  },
  "homepage": "https://github.com/rakeyshgidwani/sunday-schemas#readme",
  "devDependencies": {
    "@stoplight/spectral-cli": "^6.15.0",
    "@stoplight/spectral-rulesets": "^1.22.0",
    "ajv": "^8.17.1",
    "ajv-draft-04": "^1.0.0",
    "ajv-formats": "^3.0.1",
    "js-yaml": "^4.1.0",
    "json-schema-diff": "^0.18.1",
    "json-schema-to-typescript": "^15.0.4",
    "jsonlint": "^1.6.3",
    "openapi-diff": "^0.24.1",
    "openapi-typescript": "^7.9.1",
    "spectral": "^0.0.0",
    "@redocly/cli": "^1.0.0"
  }
}
